{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2020",
      "scripthost",
      "es2015.iterable",
      "es2015.promise",
      "es2019"
    ],
    "typeRoots": [
      "../typings/**/*",
      "src/typings/**/*",
      "typings/**/*"
    ]
  }
}